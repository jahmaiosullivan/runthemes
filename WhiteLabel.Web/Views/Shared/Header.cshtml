<header class="header-2" style="height: auto;">
    <div class="nav-container stickmenu clearfix" style="top: 0px;">
        <div class="inner">
            <a class="logo" href="/">
                <img alt="" src="/Images/main-logo.png">
            </a>
            @if (!Request.IsAuthenticated)
            {
                <a class="btn btn-primary btn-orange logo" href="/">Sell your theme through us</a>
            }
            <ul class="main-menu">
                <li class="active"><a href="#features">Features</a></li>
                <li><a id="themesLink" href="#dm-themes">Themes</a></li>
                <li><a href="/support" target="_blank" class="external">Support</a></li>
                @if (Request.IsAuthenticated)
                {
                    <li><a href="/downloads" target="_blank" class="external">My Downloads</a></li>
                }
                @Html.Partial("_LoginPartial")
            </ul>
            <!-- end:main-menu -->
            <div id="mobile-menu" class="dl-menuwrapper">
                <button class="dl-trigger"><i class="fa fa-bars"></i></button>
                <ul class="dl-menu">
                    <li class="active"><a class="scroller" href="#features">Features</a></li>
                    <li><a href="#dm-themes">Themes</a></li>
                    <li><a href="http://support.woorockets.com/" target="_blank" class="external">Support</a></li>
                    @if (Request.IsAuthenticated)
                    {
                        <li><a href="/downloads" target="_blank" class="external">Downloads</a></li>
                    }
                    @Html.Partial("_LoginPartial")
                </ul>
            </div><!--end:nav-container-->
        </div>
    </div>
</header>