@using NearForums
@using NearForums.Web.Extensions
@model List<RunThemes.Data.Models.User>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = string.Format("Manage users");
}
<ul class="path floatContainer">
	<li class="first">@Html.ActionLinkLocalized("Forums", "List", "Forums")</li>
	<li>@Html.ActionLinkLocalized("Admin", "Dashboard", "Admin")</li>
</ul>
<h1>@ViewBag.Title</h1>
@{Html.BeginForm(null, null, FormMethod.Get);}
<div class="formItem floatContainer">
	<label for="userName">@string.Format("User name")</label>
	@Html.TextBox("userName")
</div>
<div class="formItem buttons floatContainer">
	<input type="submit" value="@string.Format("Search")" />
</div>
@{Html.EndForm();}
@if (Model.Count > 0)
{
    var list = new PagedList<RunThemes.Data.Models.User>(this.Model, this.PageIndex, 100);
	using (Html.BeginForm(null, null, FormMethod.Post, new{@id="manageForm"}))
	{
		@Html.AntiForgeryToken()
		<input type="hidden" name="searched" value="@ViewBag.UserName" />
		<input type="hidden" name="id" id="userId" />
		<table cellpadding="0" cellspacing="5" class="admin">
			<thead>
				<tr>
					<th><span style="visibility:hidden;">@string.Format("Action")</span></th>
					<th>@string.Format("Name")</th>
					<th>@string.Format("Role")</th>
					<th>@string.Format("Registration date")</th>
				</tr>
			</thead>
			<tbody>
			@foreach (RunThemes.Data.Models.User u in list)
			{
				<tr>
					<td>
						<span class="actions">
							<a href="#" onclick="return promoteUser(@u.Id, '@u.UserName');">@string.Format("Promote")</a>
							<a href="#" onclick="return demoteUser(@u.Id, '@u.UserName');">@string.Format("Demote")</a>
							<a href="#" onclick="return deleteUser(@u.Id, '@u.UserName');">@string.Format("Delete")</a>
							@Html.ActionLinkLocalized("Edit Profile", "Edit", "Users", new { id = u.Id }, null)
						</span>
					</td>
					<td><strong>@Html.ActionLink(u.UserName, "Detail", "Users", new {id=u.Id}, null)</strong></td>
					<td>@u.RoleName</td>
					<td>@Html.Date(u.UserRegistrationDate ?? DateTime.UtcNow)</td>
				</tr>			
			}
			</tbody>
		</table>
	}
	@Html.Pager(list.PageSize, list.PageIndex, list.TotalItemCount, new{userName = ViewData.Get<string>("userName")}, "Previous", "Next")
	<script type="text/javascript">
		function deleteUser(userId, userName)
		{
			if (confirm('@string.Format("Are you sure you want to DELETE the user ##userName##?")'.replace('##userName##', userName)))
			{
				$("#userId").val(userId);
				$('#manageForm').attr('action', '@(Url.Action("Delete"))').submit();
			}
			return false;
		}
		function promoteUser(userId, userName)
		{
			if (confirm('@string.Format("Are you sure you want to Promote the user ##userName##?")'.replace('##userName##', userName)))
			{
				$("#userId").val(userId);
				$('#manageForm').attr('action', '@(Url.Action("Promote"))').submit();
			}
			return false;
		}
		function demoteUser(userId, userName)
		{
			if (confirm('@string.Format("Are you sure you want to Demote the user ##userName##?")'.replace('##userName##', userName)))
			{
				$("#userId").val(userId);
				$('#manageForm').attr('action', '@(Url.Action("Demote"))').submit();
			}
			return false;
		}
	</script>
}
else
{
	<p class="warning">@string.Format("No user found for the username &quot;{0}&quot;.", ViewBag.UserName)</p>
}
