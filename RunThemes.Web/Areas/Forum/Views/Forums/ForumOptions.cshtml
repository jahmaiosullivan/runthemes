@model Forum
@* 
	Show default sort first
*@
@{
	var defaultSortLabel = S("Most viewed");
	switch (Config.UI.DefaultForumSort)
	{
		case ForumSort.LatestActivity: 
			defaultSortLabel = S("Latest");
			break;
	}
}
<div class="options">
	@Html.ActionLink(defaultSortLabel, "Detail", new { page = 0 }, IsAction("Detail") ? new { @class = "selected" } : null)
	@if (Config.UI.DefaultForumSort != ForumSort.MostViewedTopics)
	{
		<span>/</span>
		@Html.ActionLinkLocalized("Most viewed", "MostViewedTopics", new { page = 0 }, IsAction("MostViewedTopics") ? new { @class = "selected" } : null)
	}
	@if (Config.UI.DefaultForumSort != ForumSort.LatestActivity)
	{
		<span>/</span>
		@Html.ActionLinkLocalized("Latest", "LatestTopics", "Forums", new { page = 0, format = NearForums.Web.UI.ResultFormat.Html.ToString() }, IsAction("LatestTopics") ? new { @class = "selected" } : null)
	}
	<span>/</span>
	@Html.ActionLinkLocalized("Unanswered", "ListUnansweredTopics", null, IsAction("ListUnansweredTopics") ? new{@class="selected"} : null)
</div>